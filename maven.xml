<project
    default="java:jar"
    xmlns:j="jelly:core"
    xmlns:maven="jelly:maven"
    xmlns:util="jelly:util"
    xmlns:ant="jelly:ant">

  <!-- ============== JAR ================== -->
  <preGoal name="java:jar-resources">
	<ant:propertyfile file="src/conf/net/ggtools/grand/buildnum.properties">
		<ant:entry key="build.date" type="date" value="now" pattern="yyyy-MM-dd"/>
		<ant:entry key="build.time" type="date" value="now" pattern="HH:mm:ss"/>
		<ant:entry key="build.number" type="int" operation="+" default="0"/>
		<ant:entry key="build.version.string" type="string" value="${pom.currentVersion}"/>
	</ant:propertyfile>
  </preGoal>
</project>
